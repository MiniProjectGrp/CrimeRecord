<!DOCTYPE html>
<html>
    <head>
        <%- include('header'); %>
    </head>
    <body>
        <%- include('nav'); %>
        <div>
            <table class="center">
                <tr>
                    <th>CRN</th>
                    <th>location</th>
                    <th>type</th>
                    <th>date</th>
                    <th>FIR ID</th>
                    <th>criminal count</th>
                </tr>
                <% crimes.forEach((crime) => {%>
                    <tr>
                        <td>
                            <%= crime.CRN%>
                        </td>
                        <td>
                            <%= crime.Location%>
                        </td>
                        <td>
                            <%= crime.Type_of_crime%>
                        </td>
                        <td>
                            <%= crime.Date_of_crime%>
                        </td>
                        <td>
                            <%= crime.Fir_id%>
                        </td>
                        <td>
                            <%= crime.Criminal_Count%>
                        </td>
                    </tr>
                <%}); %>
            </table>
        </div>
        <%- include('footer'); %>
    </body>
</html>
